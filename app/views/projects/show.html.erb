<p><%= link_to("Edit Project", edit_project_path) %></p>
<p><%= link_to("Delete", project_path(@project), method: :delete) %></p>
<h1><%= @project.name %></h1>
<p><%= @project.description %></p>

<h2>Attributes</h2>
<ul>
    <% @attribs.each do |attribute| %>
    <li><%= attribute.name %></li><span><%= link_to("Edit Attribute", edit_project_attrib_path(@project, attribute)) %></span>
    <% end %>
</ul>
<p><%= link_to("Add Attribute", new_project_attrib_path(@project)) %></p>


<h2>Components</h2>
<ul>
    <% @components.each do |component| %>
    <li><%= component.name %></li><span><%= link_to("Edit Component", edit_project_component_path(@project, component)) %></span>
    <% end %>
</ul>
<p><%= link_to("Add Component", new_project_component_path(@project)) %></p>

<h2>Capabilites</h2>
<table>
    <thead>
        <tr>
            <td>Attribute</td>
            <td>Component</td>
            <td>Description</td>
            <td>Passing?</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        <% @capabilities.each do |capability| %>
        <tr>
            <td><%= capability.attrib.name %></td>
            <td><%= capability.component.name %></td>
            <td><%= capability.description %></td>
            <td><%= capability.passing %></td>
            <td><%= link_to("Edit", edit_capability_path(:id => capability.id)) %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<p><%= link_to("Add Capability", new_capability_path(:id => @project.id)) %></p>


<table border="1" style="width:100%">
    <thead>
        <tr>
            <td></td>
            <% @attribs.each do |attribute| %>
                <td><%= attribute.name %></td>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @components.each do |component| %>
            <tr>
                <td><%= component.name %></td>
                <% @attribs.count.times do %>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>